{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "nodenext",
    "target": "esnext",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["lib/**/*"]
}
